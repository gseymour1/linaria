{
  "name": "linaria",
  "version": "0.0.1",
  "description": "Fast zero-runtime CSS in JS library",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "flow": "flow",
    "lint": "eslint .",
    "test": "jest",
    "prepublish": "npm run build:clean && npm run build:transpile && npm run build:flow",
    "build:clean": "del build",
    "build:transpile": "babel src --out-dir build --ignore **/__tests__/**",
    "build:flow": "flow-copy-source src build -i '**/__tests__/**'"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "short-hash": "^1.0.0",
    "stylis": "^2.0.12"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "1.5.1",
    "babel-preset-stage-3": "^6.24.1",
    "del-cli": "^1.0.0",
    "eslint": "^3.19.0",
    "eslint-config-prettier": "^2.1.1",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-flowtype": "^2.33.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-prettier": "^2.1.1",
    "eslint-plugin-react": "^7.0.1",
    "flow-bin": "^0.46.0",
    "flow-copy-source": "^1.1.0",
    "jest": "^20.0.4",
    "prettier": "^1.3.1"
  }
}
