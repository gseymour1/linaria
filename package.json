{
  "name": "linaria",
  "version": "0.0.1",
  "description": "Fast zero-runtime CSS in JS library",
  "main": "build/index.js",
  "license": "MIT",
  "scripts": {
    "flow": "flow",
    "lint": "eslint src example",
    "test": "jest",
    "prepublish": "npm run build:clean && npm run build:transpile && npm run build:flow",
    "build:clean": "del build",
    "build:transpile": "babel src --out-dir build --ignore '**/__tests__/**'",
    "build:transpile:watch": "babel src --out-dir build --watch --ignore '**/__tests__/**'",
    "build:flow": "flow-copy-source src build -i '**/__tests__/**'"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-plugin-preval": "^1.4.2",
    "babel-polyfill": "^6.23.0",
    "babel-register": "^6.24.1",
    "short-hash": "^1.0.0",
    "stylis": "^3.2.8"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-3": "^6.24.1",
    "dedent": "^0.7.0",
    "del-cli": "^1.1.0",
    "eslint": "^4.4.1",
    "eslint-config-callstack-io": "^0.4.1",
    "flow-bin": "^0.52.0",
    "flow-copy-source": "^1.2.0",
    "jest": "^20.0.4",
    "prettier": "^1.5.3"
  },
  "jest": {
    "testRegex": "/__tests__/.*\\.(test|spec)\\.js$",
    "testEnvironment": "node"
  }
}
